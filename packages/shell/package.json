    "ansi-styles": "^6.2.1",
    "busboy": "^1.6.0",
    "bytenode": "^1.5.3",
    "concurrently": "^8.2.1",
    "esbuild-register": "^3.5.0",
    "js-yaml": "^4.1.0",
    "logiri": "^0.1.2",
    "node-fetch": "^3.3.2",
    "protobufjs": "^7.2.5",
    "ts-toolbelt": "^9.6.0",
